{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Transaction",
    "type": "object",
    "properties": {
      "blockHash": {
        "type": ["string", "null"],
        "pattern": "^0x[a-fA-F0-9]{64}$"
      },
      "blockNumber": {
        "type": ["integer", "null"]
      },
      "from": {
        "type": "string",
        "pattern": "^0x[a-fA-F0-9]{40}$"
      },
      "gas": {
        "type": "integer"
      },
      "gasPrice": {
        "type": "integer"
      },
      "maxFeePerGas": {
        "type": "integer"
      },
      "maxPriorityFeePerGas": {
        "type": "integer"
      },
      "hash": {
        "type": "string",
        "pattern": "^0x[a-fA-F0-9]{64}$"
      },
      "input": {
        "type": "string",
        "pattern": "^0x([a-fA-F0-9]{2})*$"
      },
      "nonce": {
        "type": "integer"
      },
      "to": {
        "type": "string",
        "pattern": "^0x[a-fA-F0-9]{40}$"
      },
      "transactionIndex": {
        "type": ["integer", "null"]
      },
      "value": {
        "type": "integer"
      },
      "type": {
        "type": "integer"
      },
      "accessList": {
        "type": "array",
        "items": {
          "type": "object"
        }
      },
      "chainId": {
        "type": "integer"
      },
      "v": {
        "type": "integer"
      },
      "r": {
        "type": "string",
        "pattern": "^0x([a-fA-F0-9]{2})*$"
      },
      "s": {
        "type": "string",
        "pattern": "^0x([a-fA-F0-9]{2})*$"
      },
      "yParity": {
        "type": "integer"
      }
    },
    "required": [
      "from",
      "gas",
      "gasPrice",
      "maxFeePerGas",
      "maxPriorityFeePerGas",
      "hash",
      "input",
      "nonce",
      "to",
      "value",
      "type",
      "chainId",
      "v",
      "r",
      "s",
      "yParity"
    ]
  }